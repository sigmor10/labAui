<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="1" author="sigmor10">

        <createTable tableName="brands">
            <column name="id" type="UUID">
                <constraints primaryKey="true" primaryKeyName="brands__PK"/>
            </column>
            <column name="name" type="VARCHAR(1024)"/>
            <column name="founding_year" type="INTEGER"/>
            <column name="rating" type="DOUBLE PRECISION"/>
        </createTable>

    </changeSet>

</databaseChangeLog>
