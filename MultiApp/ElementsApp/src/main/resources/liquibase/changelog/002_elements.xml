<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="2" author="sigmor10">

        <createTable tableName="smartphones">
            <column name="id" type="UUID">
                <constraints primaryKey="true" primaryKeyName="smartphones__PK"/>
            </column>
            <column name="model" type="VARCHAR(1024)"/>
            <column name="model_id" type="VARCHAR(1024)"/>
            <column name="memory" type="INTEGER"/>
            <column name="brand_id" type="UUID">
                <constraints foreignKeyName="elements__brands__FK"
                             referencedTableName="brands"
                             referencedColumnNames="id"
                             nullable="false"/>

            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>
